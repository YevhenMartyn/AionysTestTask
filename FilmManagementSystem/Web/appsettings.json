{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=FilmManagementSystemDB;TrustServerCertificate=True;Trusted_Connection=True;MultipleActiveResultSets=True"
  },

  "FilmValidation": {
    "MaxTitleLength": 50,
    "MaxDescriptionLength": 500,
    "MaxDirectorLength": 50,
    "MaxGenreLength": 50,
    "MinRating": 1,
    "MaxRating": 10,
    "MaxDuration": 300,
    "MinReleaseYear": 1888
  },
  "CorsPolicy": {
    "AllowReactApp": {
      "AllowedOrigins": [ "http://localhost:5173" ]
    }
  },
  "AllowedHosts": "*"
}
